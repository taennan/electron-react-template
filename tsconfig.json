{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "comps/*": ["src/comps/*"],
      "consts/*": ["src/consts/*"],
      "router": ["src/router"],
      "router/*": ["src/router/*"],
      "styles/*": ["src/styles/*"],
      "types": ["src/types"],
      "types/*": ["src/types/*"],
      "lib/*": ["src/lib/*"],
    },
  },
  "include": ["src"],
}
